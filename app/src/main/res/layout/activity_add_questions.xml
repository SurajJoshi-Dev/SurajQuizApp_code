<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddQuestions"
    android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_margin="10dp"
                android:id="@+id/BackButton_btn"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Question"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/RelativeLayout"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="230dp"
                android:layout_height="230dp"

                android:layout_margin="15dp"
                android:id="@+id/TextInput"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:hint="Create your question..........."

                    android:id="@+id/Edittxt_txt"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
             android:layout_toRightOf="@+id/TextInput"

               >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Edittxt_txt"
                    android:text="Level 1"
                    android:id="@+id/Level_1"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 2"
                    android:layout_toRightOf="@id/Edittxt_txt"

                    android:id="@+id/Level_2"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 3"
                    android:layout_toRightOf="@id/Edittxt_txt"

                    android:id="@+id/Level_3"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 4"
                    android:layout_toRightOf="@id/Edittxt_txt"
                    android:id="@+id/Level_4"
                    />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Level_4"
                    android:layout_toRightOf="@id/Edittxt_txt"
                    android:text="Level 5"
                    android:id="@+id/Level_5"
                    />

            </RadioGroup>

        </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Options"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/Option_TextView"
                />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

    <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
        android:id="@+id/Radio_group"
    android:layout_margin="3dp"

                    >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radio_Options1"
            android:layout_margin="5dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_margin="5dp"
            android:id="@+id/Radio_Option_2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radio_Option_3"
            android:layout_margin="5dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radio_Option_4"
            android:layout_margin="5dp"
            />

                </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Option A"
            android:layout_toRightOf="@+id/Radio_group"
            android:id="@+id/TextInput_option1"
            android:layout_margin="2dp"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Edit_option1"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Option B"
            android:layout_toRightOf="@+id/Radio_group"
            android:layout_below="@id/TextInput_option1"
            android:id="@+id/TextInput_option2"
            android:layout_margin="2dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Edit_option2"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Option C"
            android:layout_toRightOf="@+id/Radio_group"
            android:layout_below="@id/TextInput_option2"
            android:id="@+id/TextInput_option3"
            android:layout_margin="2dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Edit_option3"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Option D"
            android:layout_toRightOf="@+id/Radio_group"
            android:layout_below="@id/TextInput_option3"
            android:id="@+id/TextInput_option4"
            android:layout_margin="2dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Edit_option4"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Question"
                android:id="@+id/SaveQuestion_btn"
            android:layout_margin="15dp"


                />

</LinearLayout>